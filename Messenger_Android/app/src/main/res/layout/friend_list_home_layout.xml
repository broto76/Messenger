<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/friend_item_background"
    android:id="@+id/rl_list_item"
    android:layout_margin="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/tv_friend_name"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(9876543210)"
        android:id="@+id/tv_friend_number"
        android:layout_below="@id/tv_friend_name"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryDark"
        />

    <ImageView
        android:id="@+id/iv_unread_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_circular_unread_bg"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:padding="10dp"
        android:src="@drawable/ic_unread_icon"
        android:visibility="gone"
        />

